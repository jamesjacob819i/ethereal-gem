# Production Environment Variables
NODE_ENV=production
PORT=5000

# Frontend URL (Update with your Vercel URL)
FRONTEND_URL=https://your-frontend-url.vercel.app

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/etherealgems?retryWrites=true&w=majority

# JWT (Generate a strong secret)
JWT_SECRET=your_production_jwt_secret_here_make_it_very_long_and_random
JWT_EXPIRE=7d

# Admin Settings
ADMIN_EMAIL=admin@etherealgems.com
ADMIN_PASSWORD=admin123456

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Session
SESSION_SECRET=your_production_session_secret_here

# Optional Services (Configure when needed)
# CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_specific_password
# EMAIL_FROM=EtherealGems <noreply@etherealgems.com>
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret